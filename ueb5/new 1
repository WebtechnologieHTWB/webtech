}
function controlPC() {
    //alert("This function is currently not implemented.");

    if ((document.forms[0].postcode.value.length > 8) || (document.forms[0].postcode.value.length == 0) || (document.forms[0].postcode.value == null)) {

        alert("The postcode-field is not filled in correctly.");

    };
}

