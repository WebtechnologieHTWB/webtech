        myString[0].includes(')')){
        alert("illegal symbols");
    }
    */
    //let mymyString = myString[0].toString().split('-', 1);


    if(
        //myString[0].toString().search(/^[0-9]*$/) ||
        (
            !(
                myString[0].toString().match(/^[a-z]*$/i)
            )
        )
